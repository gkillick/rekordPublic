<% comments.each do |comment| %>
<% unless comment[:user_id] == nil %>
<% user = User.find(comment[:user_id])%>
<% if current_user.id == user.id %>
<div class="comment_wrapper workout_<%= comment[:workout_id] %>"><div class="comment" id="message_<%= comment[:comment_id]%>" data-date="<%= comment[:date] %>" data-workout-id="<%= comment[:workout_id] %>"><div class="coach_comments_name"><%= user.first_name+" "+user.last_name %></div><span class="comment_text"><%= comment[:text] %></span></div></div>
<% else %>
<div class="comment_wrapper workout_<%= comment[:workout_id] %>"><div class="comment" id="message_<%= comment[:comment_id]%>" data-date="<%= comment[:date] %>" data-workout-id="<%= comment[:workout_id] %>"><div class="coach_comments_name blue_name"><%= user.first_name+" "+user.last_name %></div><span class="comment_text"><%= comment[:text] %></span></div></div>
<% end %>
<% end %>
<% end %>
